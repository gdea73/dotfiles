bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# suspend lappy
bindsym $mod+F1 exec "systemctl suspend -i"
# turn off the monitor(s) altogether
bindsym $mod+F2 exec "xset dpms force off"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# there's a bug in amixer such that set Master toggle will mute Master and
# Speaker, but only unmute Master. pactl doesn't have this bug.
bindcode 121 exec --no-startup-id pactl set-sink-mute alsa_output.pci-0000_00_1f.3.analog-stereo toggle
bindsym $mod+m exec --no-startup-id pactl set-sink-mute alsa_output.pci-0000_00_1f.3.analog-stereo toggle

# dock audio
bindsym $mod+Ctrl+F1 exec --no-startup-id pactl set-sink-mute 4 toggle
# microphone
bindsym XF86AudioMicMute exec --no-startup-id amixer -D default set Capture toggle
bindsym $mod+Shift+m exec --no-startup-id amixer -D default set Capture toggle
# microphone (alt)
bindsym $mod+Ctrl+F4 exec --no-startup-id amixer -D default set Capture toggle
bindcode 122 exec --no-startup-id amixer -D default set Master 3%-
bindsym $mod+Ctrl+F2 exec --no-startup-id amixer -D default set Master 3%-
bindsym $mod+Ctrl+F3 exec --no-startup-id amixer -D default set Master 3%+
bindcode 123 exec --no-startup-id amixer -D default set Master 3%+
# brightness (see "bright" in ~/scripts)
bindsym XF86MonBrightnessUp exec $HOME/scripts/bright up 5
bindsym XF86MonBrightnessDown exec $HOME/scripts/bright down 5
# screenshot (interactive)
bindsym Print exec --no-startup-id gnome-screenshot -i
# screenshot (select area)
bindsym $mod+Print exec gnome-screenshot -a -i
# screenshot (window)
bindsym Shift+Print exec --no-startup-id scrot -u

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
